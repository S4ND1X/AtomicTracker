<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateHabitActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:gravity="center"
            android:text="@string/create_habit"
            android:textColor="@color/black_500"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/habit_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/ic_field"
            android:drawablePadding="16dp"
            android:ems="10"
            android:hint="@string/habit_name"
            android:inputType="textShortMessage"
            android:maxLength="16"
            android:padding="16dp"
            android:autofillHints="name" />

        <TextView
            android:id="@+id/frequencyTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="34dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="28dp"
            android:gravity="start"
            android:text="@string/habit_frequency"
            android:textColor="@color/black_500"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/frequencySpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:spinnerMode="dropdown" />

        <TextView
            android:id="@+id/notificationTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="34dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="28dp"
            android:gravity="start"
            android:text="@string/habit_notification"
            android:textColor="@color/black_500"
            android:textSize="16sp" />

        <Switch
            android:id="@+id/notificationSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:checked="true"
            android:textOff="@string/off"
            android:textOn="@string/on"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <TextView
            android:id="@+id/hourTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="34dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="28dp"
            android:gravity="start"
            android:text="@string/hora"
            android:textColor="@color/black_500"
            android:textSize="16sp" />

        <Button
            android:id="@+id/hour_picker_button"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:layout_marginStart="-50dp"
            android:layout_marginTop="10dp"
            android:background="@android:drawable/ic_menu_recent_history"
            android:paddingLeft="64dp"
            android:paddingRight="64dp"
            android:shadowColor="#00673AB7"
            android:text="@string/date_picker"
            android:textColor="@color/white"
            tools:text="@string/date_picker" />

        <TextView
            android:id="@+id/dateTextView"
            android:layout_width="131dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="34dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="28dp"
            android:gravity="start"
            android:text="@string/start_date"
            android:textColor="@color/black_500"
            android:textSize="16sp" />


        <Button
            android:id="@+id/date_picker_button"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:layout_marginStart="-50dp"
            android:layout_marginTop="10dp"
            android:background="@android:drawable/ic_menu_today"
            android:paddingLeft="64dp"
            android:paddingRight="64dp"
            android:text="@string/date_picker"
            android:textColor="@color/white"
            tools:text="@string/date_picker" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/createHabitButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:background="@drawable/ic_button"
            android:paddingLeft="64dp"
            android:paddingRight="64dp"
            android:text="@string/update_profile"
            android:textColor="@color/white"
            tools:text="@string/create_habit" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>