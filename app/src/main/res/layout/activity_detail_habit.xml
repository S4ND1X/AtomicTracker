<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailHabitActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:gravity="center"
        android:text="@string/detalles"
        android:textColor="@color/black_500"
        android:textSize="24sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="34dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="28dp"
            android:gravity="start"
            android:text="@string/habit_name"
            android:textColor="@color/black_500"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/nameDetailTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="28dp"
            android:gravity="start"
            android:text="@string/na"
            android:textColor="@color/black_500"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="34dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="28dp"
            android:gravity="start"
            android:text="@string/habit_frequency"
            android:textColor="@color/black_500"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/frequencyDetailTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="28dp"
            android:gravity="start"
            android:text="@string/na"
            android:textColor="@color/black_500"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="34dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="28dp"
            android:gravity="start"
            android:text="@string/habit_notification"
            android:textColor="@color/black_500"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/notificationDetailTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="28dp"
            android:gravity="start"
            android:text="@string/na"
            android:textColor="@color/black_500"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="34dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="28dp"
            android:gravity="start"
            android:text="@string/hora"
            android:textColor="@color/black_500"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/hourDetailTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="28dp"
            android:gravity="start"
            android:text="@string/na"
            android:textColor="@color/black_500"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="34dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="28dp"
            android:gravity="start"
            android:text="@string/habit_date"
            android:textColor="@color/black_500"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/dateDetailTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="28dp"
            android:gravity="start"
            android:text="@string/na"
            android:textColor="@color/black_500"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="34dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="28dp"
            android:gravity="start"
            android:text="@string/video"
            android:textColor="@color/black_500"
            android:textSize="20sp" />

        <com.google.android.youtube.player.YouTubePlayerView
            android:id="@+id/youtubePlayer"
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="28dp"
            android:gravity="center"/>

        <Button
            android:id="@+id/playButton"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@android:drawable/ic_media_play"
            android:gravity="center"
            android:paddingLeft="64dp"
            android:paddingRight="64dp" />

    </LinearLayout>

</ScrollView>